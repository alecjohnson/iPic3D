#!/bin/bash

ME=${0##*/}
function usage()
{
  echo "
    $ME: show how to set striping parameters for file or directory
  
    usage: $ME <stringing-count> <stripe-length> <dir>
  "
}

if [ ${1:-a} == "--help" ] || [ ${1:-a} == "-h" ]; then usage; exit 1; fi

echo lfs setstripe -c ${1:-4} -S ${2:-1m} ${3:-data}
